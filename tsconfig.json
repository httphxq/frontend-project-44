{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "rootDir": "./",
    "outDir": "./dist",
    "allowJs": true
  },
  "include": [
    "bin/**/*",
    "src/**/*",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}