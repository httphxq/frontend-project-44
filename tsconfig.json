{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "bin/*.js",              
    "src/games/*.js",        
    "src/cli.js",            
    "eslint.config.js"       
  ]
}